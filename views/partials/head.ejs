<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Bergu</title>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

<style>

body {
            margin: 0;
            padding: 0;
            background: linear-gradient(to bottom, #141e30, #243b55);
            font-family: 'Arial', sans-serif;
            color: #fff;
        }

        .container {
            max-width: 100%;
            margin: 0 auto;
            text-align: center;
            margin-top: 100px;
            margin-bottom: 10px;
        }
        .box {
            max-width: 80%;
            margin: 0 auto;
 
            margin-top: 100px;
            margin-bottom: 20px;
        }
        .boxnav {
            max-width: 80%;
            margin: 0 auto;
            margin-top: 20px;
            margin-bottom: 20px;
        }

        h1, h2, p {
            margin: 0;
        }

        .project {
            margin-bottom: 40px;
        }

        .project img {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
        }

    /* header navbar */

    header {
        width: 80%;
        margin-top: 10px;
        margin-bottom: 10px;

    }

    nav {
            text-align: right;
            /* position: fixed; */
            /* top: 0;
            right: 0; */
            /* margin: 0 auto; */
            left: 0;
            margin-right: 16px;
            display: flex;
            align-items: center;
            margin-bottom: 20px;

        }

        .navlink {
            /* margin: 0 auto;
            position: fixed; */
            text-align: center;
            margin-left: 10px; /* Adjust the space between navlinks as needed */
            text-decoration: none; /* Optional: Remove underline from the link */
            color: white; /* Optional: Use your desired text color */
        }

        .navlink span {
            font-size: 25px; /* Adjust the icon size as needed */
            margin-bottom: 5px; /* Adjust the space between icon and text as needed */
            display: block; /* Ensure each span is on a new line */
        }


    /* center */
    section {
        text-align: center;
        padding: 10px;
        background: rgba(0, 0, 0, 0.5);
        border-radius: 5px 5px;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    /* tab */
    .tab-container {
            width: 100%;
            margin: 50px auto;
        }

        .tab-buttons {
            display: flex;
            margin-bottom: 20px;
        }

        .tab-button {
            flex: 1;
            padding: 10px;
            text-align: center;
            cursor: pointer;
            background-color: transparent;
            
            color: #fff;
            border: none;
            outline: none;
            transition: background-color 0.3s;
        }

        .tab-button:hover {
            color: aqua;
        }

        .tab-content {
            display: none;
        }

        .tab-content.active {
            display: block;
        }

        .scroll-btn {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background-color: #3498db;
            color: #fff;
            padding: 10px;
            border: none;
            outline: none;
            cursor: pointer;
            display: none;
        }

    /* table */
    table {
        border-collapse: collapse;
        width: 100%;
        font-size: 10px;
    }

    th, td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: transparent;
        font-weight: bold;
        font-size: 11px;
    }

    /* modal */
    .modal-container {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    align-items: center;
    justify-content: center;
}

.modal {
    background-color: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

form {
    display: flex;
    flex-direction: column;
}

label {
    margin-bottom: 8px;
}

input {
    padding: 8px;
    margin-bottom: 16px;
    border: 1px solid #ccc;
    border-radius: 4px;
}

button {
    padding: 10px;
    background-color: #4caf50;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

button:hover {
    background-color: #45a049;
}

.close {
    position: absolute;
    top: 10px;
    right: 10px;
    font-size: 20px;
    cursor: pointer;
    color: #3498db;
}

    /* otp */
    .inputotp {
    width: 40px;
    border: none;
    border-bottom: 3px solid rgba(0, 0, 0, 0.5);
    margin: 0 10px;
    text-align: center;
    font-size: 36px;
    cursor: not-allowed;
    pointer-events: none;
}
 
.inputotp:focus {
    border-bottom: 3px solid orange;
    outline: none;
}
 
.inputotp:nth-child(1) {
    cursor: pointer;
    pointer-events: all;
}

a {
    color: white;
    text-decoration: none;
}
a:hover {
    color: #45a049;
}
</style>